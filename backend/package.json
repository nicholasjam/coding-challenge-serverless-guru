{
  "name": "task-manager-backend",
  "version": "1.0.0",
  "description": "Serverless backend for Task Manager application",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "remove:dev": "serverless remove --stage dev",
    "remove:prod": "serverless remove --stage prod",
    "logs": "serverless logs -f",
    "offline": "serverless offline",
    "dynamodb:install": "serverless dynamodb install",
    "dynamodb:start": "serverless dynamodb start"
  },
  "keywords": [
    "serverless",
    "aws",
    "lambda",
    "dynamodb",
    "api-gateway",
    "task-manager"
  ],
  "author": "Task Manager Team",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.1490.0",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "cors": "^2.8.5",
    "lambda-api": "^0.12.0"
  },
  "devDependencies": {
    "serverless": "^3.38.0",
    "serverless-offline": "^13.3.0",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-webpack": "^5.13.0",
    "webpack": "^5.89.0",
    "webpack-node-externals": "^3.0.0",
    "babel-loader": "^9.1.3",
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "jest": "^29.7.0",
    "eslint": "^8.52.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
